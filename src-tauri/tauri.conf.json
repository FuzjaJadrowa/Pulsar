{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pulsar",
  "version": "2.2.0",
  "identifier": "com.fuzjajadrowa.pulsar",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Pulsar",
        "width": 1000,
        "height": 700,
        "minWidth": 950,
        "minHeight": 650,
        "resizable": true,
        "fullscreen": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "dmg", "appimage", "deb"],
    "icon": [
      "../src/assets/icons/icon.png",
      "../src/assets/icons/icon.icns",
      "../src/assets/icons/icon.ico"
    ],
    "copyright": "Copyright Â© 2026 Fuzja Jadrowa"
  }
}